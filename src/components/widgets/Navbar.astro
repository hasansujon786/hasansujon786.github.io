---
import { FiGithub, FiCode, FiHome, FiMail, FiSun, FiBriefcase } from 'react-icons/fi'
import IconLink from '../atoms/IconLink.astro'
import { MY_EMAIL_HREF, MY_GITHUB } from '@/config/constants'
---

<section class='fixed right-0 bottom-0 left-0 z-40 grid place-items-center xl:hidden'>
  <nav
    class='bg-ground/80 group mb-3 rounded-full px-3 py-1 shadow-2xl shadow-black/80 outline outline-zinc-700/50 backdrop-blur-lg'
  >
    <div class='flex items-center justify-center text-xl text-zinc-400 group-hover:[&>.gap]:w-2!'>
      <IconLink href='#home'><FiHome /></IconLink>
      <span class='gap'></span>
      <IconLink href='#featured-projects'><FiCode /></IconLink>
      <span class='gap'></span>
      <IconLink href={MY_EMAIL_HREF}><FiMail /></IconLink>
      <span class='gap'></span>
      <IconLink target='_blank' href={MY_GITHUB} ><FiGithub /></IconLink>
      <!-- <span class='gap'></span> -->
      <!-- <IconLink><FiSun /></IconLink> -->
    </div>
  </nav>
</section>

<style>
  .gap {
    transition: all 300ms cubic-bezier(0.23, 1, 0.32, 1);
    height: 12px;
    width: 2px;
  }
</style>
