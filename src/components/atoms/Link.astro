---
import { cn } from '@/lib/utils'

interface Props {
  href?: string
  class?: string
}

const { href = '#', class: classNames } = Astro.props
---

<a
  href={href}
  class={cn(
    'hover:decoration-primary-dark outline-primary rounded-xs px-1 underline decoration-solid underline-offset-2 decoration-zinc-300 decoration-1 transition-colors duration-75 focus-visible:outline-2',
    'hover:text-primary inline-flex items-center gap-1 text-sm tracking-wide text-white text-center',
    classNames
  )}
>
  <slot />
</a>
