---
import { cn } from '@/lib/utils'

interface Props {
  href?: string
  class?: string
  target?: string
}

const {  class: classNames, ...rest } = Astro.props
---

<a
  class={cn(
    'rounded-xs px-1 underline decoration-solid underline-offset-2 decoration-zinc-300 decoration-1 transition-colors duration-75',
    'inline-flex items-center gap-1 text-sm tracking-wide text-white text-center',
    'rounded-md hover:decoration-primary hover:text-primary-light active:text-primary active:decoration-primary-dark focus-visible:ring-primary focus-visible:ring-2 focus-visible:outline-none',
    classNames
  )}
  {...rest}
>
  <slot />
</a>
